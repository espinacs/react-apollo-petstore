{
  "name": "react-apollo-petstore",
  "version": "1.0.0",
  "keywords": ["react", "react-apollo", "apollo-server", "apollo-client", "graphql", "graphql-js", "storybook", "cypress", "petstore"],
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-link-mock": "^1.0.1",
    "graphql": "^14.1.1",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-apollo-hooks": "^0.4.3",
    "react-dom": "^16.8.4",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8",
    "styled-components": "^4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "server-start": "cd ./server && npm start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "npm test -- --json --outputFile=.jest-test-results.json",
    "test:coverage": "npm test -- --coverage",
    "cypress:open": "./node_modules/.bin/cypress open",
    "cypress:run": "./node_modules/.bin/cypress run",
    "storybook": "start-storybook -p 9009 -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addon-options": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-loader": "^8.0.5",
    "cypress": "^3.2.0",
    "react-testing-library": "^6.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/components/**/*.{js,jsx}",
      "**/src/containers/**/*.{js,jsx}",
      "**/src/hooks/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/src/**/*.stories.{js,jsx}"
    ]
  }
}
